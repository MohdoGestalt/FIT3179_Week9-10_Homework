{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Download Speed in kilobits per second",
    "background": "none",
    "width": 500,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/refs/heads/master/public/data/malaysia-states.topojson",
      "format": {"type": "topojson", "feature": "states"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "ookla_my_states.csv",
            "format": {"type": "csv"}
          },
          "key": "name", 
          "fields": ["avg_d_kbps"]
        }
      },
      {
        "calculate": "datum.avg_d_kbps == null ? 0 : datum.avg_d_kbps",
        "as": "adl_kbps"
      }
    ],
    "mark": {
      "type": "geoshape",
      "stroke": "black",
      "strokeWidth": 0.5 
    },
    "encoding": {
      "color": {
        "field": "adl_kbps",
        "type": "quantitative",
        "title": "Download Speed (kbps)" ,
        "scale": {
            "domain": [0, 300000],
            "range": ["#FFFFFF", "#000f56"]
        } 
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "avg_d_kbps", "type": "quantitative", "title": "Average Download Speed (kbps)"}
      ]
    }
  }