{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Average Download Speed in Malaysian States (kbps)"
    },
    "width": 700,
    "height": 600,
    "projection": {"type": "equalEarth"},
    "layer": [
        {
        "data": {
            "url": "https://raw.githubusercontent.com/MohdoGestalt/FIT3179_Week9-10_Homework/refs/heads/main/my.topojson",
            "format": {"type": "topojson", "feature": "my"}
        },
        "transform": [
            {
                "lookup": "properties.name",
                "from":{
                    "data": {
                        "url": "https://raw.githubusercontent.com/MohdoGestalt/FIT3179_Week9-10_Homework/refs/heads/main/ookla_my_states.csv"
                    },
                    "key": "name",
                    "fields": ["avg_d_kbps"]
                }
            }],
        "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
        "encoding": {
            "color": {
                "field": "avg_d_kbps",
                "type": "quantitative",
                "title": "Download Speed (kbps)",
                "scale": {
                    "domain": [125000, 250000],
                    "range": ["#FFFFFF", "#000f56"]
                }
            },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "states"},
          {"field": "avg_d_kbps", "type": "quantitative", "title": "Average Download Speed (kbps)"}
        ]
        }
    },
    {
        "data": {
            "url":"https://raw.githubusercontent.com/MohdoGestalt/FIT3179_Week9-10_Homework/refs/heads/main/ookla_my_coord.csv"
        },
        "transform": [
            {"sort": {"field": "avg_d_kbps", "order": "descending"}}
        ],
        "mark": {"type": "circle", "size": 1},
        "encoding": {
            "longitude": {"field": "longitude", "type":
            "quantitative"},
            "latitude": {"field": "latitude", "type":
            "quantitative"},
            "color": {
                "field": "devices",
                "type": "quantitative",
                "title": "Average Tile Download Speed",
                "scale": {"domain": [0, 300000], "scheme": "blues"}
            }
        }
    }
    ]
}